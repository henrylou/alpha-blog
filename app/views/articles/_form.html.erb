<%= render 'shared/errors', obj: @article %>

<div class="container py-5">
  <div class="row">
    <div class="col-md-12">
      <!-- <h2 class="text-center mb-4">Bootstrap 4 Login Form</h2> -->
      <div class="row">
        <div class="col-md-6 mx-auto">

        <!-- form card login -->
        <div class="card rounded">
          <div class="card-header">
            <% if @article.new_record? %>                            
              <h3 class="text-center">New Article</h3>
            <% else %> 
              <h3 class="text-center">Edit <%= @article.title%></h3>
            <% end %>
          </div>
          <div class="card-body">
            <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
              <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, class: "form-control form-control-lg", placeholder: "Enter title", autofocus: true %>
              </div>
              <div class="form-group">
                <%= f.label :description %>
                <%= f.text_area :description, rows: 5, class: "form-control form-control-lg", placeholder: "Enter description" %>
              </div>
              <div class="form-group">
                <%= f.collection_check_boxes :category_ids, Category.all.sort_by(&:name), :id, :name do |cb| %>
                  <% cb.label(class: "checkbox-inline input_checkbox") { cb.check_box(class: "checkbox") + cb.text } %> 
                <% end %>                           
              </div>
              <%= f.submit class: 'btn btn-primary btn-lg float-right' %>
              <% end %>
            </div> <!--/card-block-->
          </div> <!-- /form card login -->
        </div>
      </div> <!--/row-->
    </div> <!--/col-->
  </div> <!--/row-->
</div> <!--/container-->
