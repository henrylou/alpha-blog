<%= form_with(model: article, local: true, :html => {class: "form-horizontal", row: "form"}) do |form| %>
  <% if article.errors.any? %>
    <!-- <div id="error_explanation"> -->
      <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
          <div class="panel panel-danger">
            <div class="panel-heading">
              <h2 class="panel-title">
                <%= pluralize(article.errors.count, "error") %> 
                prohibited this article from being saved:
              </h2>
              <div class="panel-body">
                <ul>
                  <% article.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    <!-- </div> -->
  <% end %>

  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :title %>
    </div>
    <div class="col-sm-8">
      <%= form.text_field :title, class: "form-control", placeholder: "Title", autofocus: "true" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :description %>
    </div>
    <div class="col-sm-8">
      <%= form.text_area :description, rows: 10, class: "form-control", placeholder: "Description", autofocus: "true" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit class: "btn btn-primary btn-lg" %> 
      <!-- <button type="submit" class="btn btn-primary">Sign in</button> -->
    </div>
  </div>

 

<% end %>