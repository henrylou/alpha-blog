<%= render 'shared/errors', obj: @category %>

<div class="container py-5">
  <div class="row">
    <div class="col-md-12">
      <!-- <h2 class="text-center mb-4">Bootstrap 4 Login Form</h2> -->
      <div class="row">
        <div class="col-md-6 mx-auto">

          <!-- form card login -->
          <div class="card rounded">
            <div class="card-header">
              <% if @category.new_record? %>                            
                <h3 class="text-center">New Category</h3>
              <% else %> 
                <h3 class="text-center">Edit <%= @category.name %></h3>
              <% end %>
            </div>
            <div class="card-body">
              <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
                <div class="form-group">
                  <%= f.label :name %>
                  <%= f.text_field :name, class: "form-control", placeholder: "Enter category name", autofocus: true %>
                </div>
                <%= f.submit class: 'btn btn-primary btn-lg float-right' %>
              <% end %>
            </div> <!--/card-block-->
          </div> <!-- /form card login -->
        </div>
      </div> <!--/row-->
    </div> <!--/col-->
  </div> <!--/row-->
</div> <!--/container-->
