<header class="custom-bg">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="post-heading text-white">
          <h1>All Categories</h1>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <% if @categories.any? %>
        <% @categories.each do |category| %>
          <div class=" text-secondary">
            <%= link_to category.name, category_path(category), class: "btn btn-warning btn-lg" %>
          </div>
          <h5 class="mt-2"><%= pluralize(category.articles.count, "article") %></h5>
          <hr>
        <% end %>
      <% else %>
        <h2>No categories!</h2>
      <% end %>
    </div>
  </div>
</div>

<%= will_paginate list_classes: %w(pagination justify-content-center), class: 'text-secondary' %>