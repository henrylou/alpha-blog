<% if !flash.empty? %>
  <div class="alert alert-dismissible alert-secondary mb-0">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <p class="mb-0">
      <ul>
        <% flash.each do |name, msg| %>
          <li><%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %></li>
        <% end %>
      </ul>
    </p>
  </div>
<% end %>